{
  "name": "@teknologika/mcp-codebase-search",
  "version": "0.1.0",
  "description": "Local-first semantic search system for codebases using MCP protocol with Tree-sitter parsing and ChromaDB vector storage",
  "type": "module",
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=10.0.0"
  },
  "bin": {
    "mcp-codebase-search": "./dist/bin/mcp-server.js",
    "mcp-codebase-ingest": "./dist/bin/ingest.js",
    "mcp-codebase-manager": "./dist/bin/manager.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-ui",
    "copy-ui": "mkdir -p dist/ui/manager/templates dist/ui/manager/static && cp src/ui/manager/templates/*.hbs dist/ui/manager/templates/ && cp src/ui/manager/static/* dist/ui/manager/static/",
    "dev": "node --watch --env-file=.env src/bin/manager.ts",
    "dev:mcp": "node --watch src/bin/mcp-server.ts",
    "dev:ingest": "node --watch src/bin/ingest.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "security": "npm audit --audit-level=moderate",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "semantic-search",
    "codebase",
    "embeddings",
    "vector-search",
    "tree-sitter",
    "local-first",
    "chromadb",
    "code-analysis",
    "ast-parsing",
    "llm-tools",
    "developer-tools"
  ],
  "author": "Teknologika",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/teknologika/mcp-codebase-search.git"
  },
  "bugs": {
    "url": "https://github.com/teknologika/mcp-codebase-search/issues"
  },
  "homepage": "https://github.com/teknologika/mcp-codebase-search#readme",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/flash": "^6.0.3",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^10.0.2",
    "@huggingface/transformers": "^3.8.1",
    "@lancedb/lancedb": "^0.5.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "commander": "^11.1.0",
    "fastify": "^5.7.4",
    "handlebars": "^4.7.8",
    "ignore": "^7.0.5",
    "pino": "^8.17.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-c-sharp": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "pino-pretty": "^11.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
